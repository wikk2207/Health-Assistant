{
    "parserOptions": {
        "ecmaVersion": 2020
    },

    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },

    "extends": "eslint:recommended",

    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
